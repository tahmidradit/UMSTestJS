@model UMSTestJS.Models.ViewModels.StudentViewModel
@{
    ViewData["Title"] = "Create - Student";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<br>
<div class="col-12">
    <form method="POST" asp-controller="Student" asp-action="Create">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="@Model.Student.Name"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control" asp-for="@Model.Student.Name">
                    <span class="text-danger" asp-validation-for="@Model.Student.Name"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-2">
                    <label asp-for="@Model.Student.Department"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control" asp-for="@Model.Student.Department">
                    <span class="text-danger" asp-validation-for="@Model.Student.Department"></span>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-2">
                    <button type="submit" class="btn btn-primary text-white form-control">Register</button>         
                </div>
                <div class="col-2">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-dark text-white form-control">Back To List</a>
                </div>
            </div>
        </div>            
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }    
}