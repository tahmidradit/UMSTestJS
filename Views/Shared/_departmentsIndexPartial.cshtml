@model IEnumerable<Department>

<div id="departmentsTable" class="col-md-6 col-sm-6">
    <h3 class="text-primary">Departments List</h3><br>
    @if(Model.Count() > 0)
        {
            <table class="table table-hover bordered table-sm text-center">
                <thead class="table table-primary">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Id)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                        </tr>
                    } 
                </tbody>
            </table>
        }
        else
        {
            <p>No Departments</p>
        }
</div>








