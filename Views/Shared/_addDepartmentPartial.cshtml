@model Department

<div>
    <form id="formId">
        <div class="col-12">
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-11">
                    <input type="text" class="form-control" id="name">
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-6">
                    <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                </div>
                <div class="col-6">
                    <input type="button" id="submit" class="btn btn-primary form-control" value="Add Department" >
                </div>
            </div>
            <div class="col-12" id="ValidationMessage"></div>
        </div>
    </form>
</div>
