@model Department

<div>
    <form id="addDepartmentsForm" method="POST" data-ajax="true" data-ajax-complete="DepartmentPageModalActions()"  asp-controller="Student" asp-action="AddDepartment">
        <div class="col-12">
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-11">
                    <input type="text" class="form-control" id="name" asp-for="Name">
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-6">
                    <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control"><i class="fas fa-plus"></i> &nbsp; Add</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    
    function DepartmentPageModalActions() {
        $('#addDepartmentPageModal').modal('toggle');
        document.getElementById("name").value = "";
        $("#addDepartmentsForm").load(" #addDepartmentsForm");
        $("#departmentsTable").load(" #departmentsTable");
    } 

</script>
