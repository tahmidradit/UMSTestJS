@model IEnumerable<Student>

<div id="studentsTable" class="col-md-6 col-sm-3">
    <h3 class="text-primary">Students List</h3><br>
    @if(Model.Count() > 0)
    {
        <table class="table table-hover bordered table-sm text-center">
            <thead class="table table-primary">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Department.Name)</td>
                    </tr>
                } 
            </tbody>
        </table>
    }
    else
    {
        <p>No Students</p>
    }
</div>