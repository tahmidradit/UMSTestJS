@model UMSTestJS.Models.ViewModels.StudentViewModel
@using UMSTestJS.Extentions
<div>
    <form>
        <div class="col-12">
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Student.Name"></label>
                </div>
                <div class="col-11">
                    <input type="text" class="form-control" id="name">
                </div>
            </div>
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Department"></label>
                </div>
                <div class="col-11">
                    <select class="form-control" asp-for="Student.DepartmentId" asp-items="@Model.Departments.ToSelectListItems(Model.Student.DepartmentId)"  id="department"></select>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-6">
                    <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                </div>
                <div class="col-6">
                    <input type="button" id="register" class="btn btn-primary form-control" value="Save changes" />
                </div>
            </div>
            <div class="col-12" id="ValidationMessage"></div>
        </div>
    </form>
</div>
