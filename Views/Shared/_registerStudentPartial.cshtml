@model UMSTestJS.Models.ViewModels.StudentViewModel
@using UMSTestJS.Extentions

<div>
    <form method="POST" data-ajax="true" data-ajax-complete="PageModalActions()" asp-controller="Student" asp-action="RegisterStudent">
        <div class="col-12">
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Student.Name"></label>
                </div>
                <div class="col-11">
                    <input type="text" class="form-control" id="name"  asp-for="Student.Name">
                </div>
            </div>
            <div class="form-group">
                <div class="col-2 ">
                    <label asp-for="Department"></label>
                </div>
                <div class="col-11">
                    <select class="form-control" id="department" asp-for="Student.DepartmentId" asp-items="@Model.Departments.ToSelectListItems(Model.Student.DepartmentId)"></select>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-6">
                    <button type="button" class="btn btn-secondary form-control" data-dismiss="modal">Close</button>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control"><i class="fas fa-plus"></i> &nbsp; Register</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery.unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
<script>
    function PageModalActions() {
        $('#createStudentPageModal').modal('toggle');
        document.getElementById("name").value = "";
        document.getElementById("department").value = "";
        $("#tbl").load(" #tbl");
    }   
</script>